{
  "name": "e2e-encrypted-messenger",
  "version": "2.0.0",
  "description": "End-to-end encrypted messaging web application with SQLite persistence",
  "main": "server-sqlite.js",
  "scripts": {
    "start": "node server-sqlite.js",
    "start:memory": "node server.js",
    "dev": "nodemon server-sqlite.js",
    "dev:memory": "nodemon server.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "setup": "npm run install-all && npm run build"
  },
  "keywords": [
    "e2e",
    "encryption",
    "messenger",
    "chat",
    "secure",
    "sqlite",
    "persistence"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "sql.js": "^1.10.0",
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
